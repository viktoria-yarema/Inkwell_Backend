{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler", 
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "ES2020",
  },
  "include": [
    "src/**/*.ts",
    "src/app.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "typeRoots": ["./node_modules/@types", "./types"]
}
